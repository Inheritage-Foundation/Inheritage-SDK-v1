{
  "name": "@inheritage-foundation/sdk",
  "version": "0.2.0",
  "description": "TypeScript SDK for the Inheritage API â€” India's open cultural heritage dataset.",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./langchain": {
      "import": "./dist/langchain.mjs",
      "require": "./dist/langchain.cjs",
      "types": "./dist/langchain.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks.mjs",
      "require": "./dist/hooks.cjs",
      "types": "./dist/hooks.d.ts"
    },
    "./components": {
      "import": "./dist/components/InheritageCitation.mjs",
      "require": "./dist/components/InheritageCitation.cjs",
      "types": "./dist/components/InheritageCitation.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist",
    "lint": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run tests/client.test.ts tests/langchain.test.ts",
    "test:watch": "vitest",
    "prepublishOnly": "npm run clean && npm run build && npm run test:unit"
  },
  "keywords": [
    "inheritage",
    "heritage",
    "open-data",
    "digital-heritage",
    "cultural-preservation",
    "api",
    "sdk",
    "typescript",
    "geojson",
    "ai",
    "openapi",
    "cc-by"
  ],
  "author": "Inheritage Foundation <hello@inheritage.foundation>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Inheritage-Foundation/Inheritage-SDK-v1.git"
  },
  "bugs": {
    "url": "https://github.com/0xMilord/Inheritage-SDK-v1/issues"
  },
  "homepage": "https://inheritage.foundation/docs/api",
  "dependencies": {
    "langchain": "^0.2.11",
    "langsmith": "^0.1.30"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^20.11.20",
    "@types/react": "^18.2.0",
    "react": "^19.2.0",
    "rimraf": "^5.0.5",
    "tsup": "^7.2.0",
    "typescript": "^5.4.0",
    "vitest": "^1.3.0"
  },
  "funding": "https://inheritage.foundation/donate"
}
