{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": ".",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "types": [
      "node",
      "vitest/globals"
    ],
    "noEmit": true
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "dist",
    "tests/e2e.test.ts",
    "tests/hooks.test.ts"
  ]
}


